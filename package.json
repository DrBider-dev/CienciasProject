{
  "name": "cienciasproject",
  "version": "1.0.0",
  "description": "Aplicación de Ciencias II - Proyecto Universitario",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:portable": "electron-builder --win portable"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DrBider-dev/CienciasProject.git"
  },
  "keywords": [
    "busquedas",
    "universidad",
    "algoritmos"
  ],
  "author": "Brayan Aguirre",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/DrBider-dev/CienciasProject/issues"
  },
  "homepage": "https://github.com/DrBider-dev/CienciasProject#readme",
  "devDependencies": {
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.drbider.hashseek",
    "productName": "Hash&Seek",
    "copyright": "© 2025 Brayan Aguirre",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "package.json",
      "!node_modules/**/*",
      "!dist/**/*",
      "!build/**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Hash&Seek",
      "deleteAppDataOnUninstall": false
    },
    "extraResources": [
      {
        "from": "src/Assets/",
        "to": "src/Assets/",
        "filter": ["**/*"]
      }
    ],
    "publish": null
  }
}